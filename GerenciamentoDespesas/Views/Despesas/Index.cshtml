@model IEnumerable<GerenciamentoDespesas.Models.Despesas>

@{
    ViewData["Title"] = "Index";
}

<h1>Despesas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDespesas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Meses.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDespesas.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DespesasId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DespesasId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DespesasId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
